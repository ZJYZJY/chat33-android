<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/empty_friends_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/chat_friend_list_empty"
        android:textColor="@color/chat_text_grey_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_invite_friends"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_blue_r18"
        android:gravity="center"
        android:text="@string/chat_invite_friend"
        android:textColor="@color/chat_color_accent" />
</LinearLayout>